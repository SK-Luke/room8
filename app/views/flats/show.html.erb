<div class="container">
  <h2 style="display: inline-block;">My roommates</h1>
  <p><%= Time.days_in_month(Time.now.month, Time.now.year) - Time.now.day %> days remaining till july</p>
  <div class="row">
    <% @flat.users.each do |user| %>
      <div class="col-12 col-sm-9 col-md-6 col-lg-4 mx-auto my-2">
        <%= link_to chore_list_index_path(current_user) do %>
          <%= render partial: "user_card", locals: {user: user} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
