<div class="container mt-3">
  <h2 class="header" style="display: inline-block;">My roommates</h1>
  <p style="background-color: rgba(0,0,0,.1); padding: 8px; border-radius: 12px; display: inline-block;margin: 0px;">
    ⏱️ <%= Time.days_in_month(Time.now.month, Time.now.year) - Time.now.day %> days remaining until <%= Date.today.next_month.strftime("%B") %>
  </p>
  <div class="row">
    <% @flat.users.each do |user| %>
      <div class="col-12 col-sm-9 col-md-6 col-lg-4 mx-auto my-2">
        <%= link_to flat_user_chore_list_index_path(user.name.gsub(" ", "-")) do %>
          <%= render partial: "user_card", locals: {user: user} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
