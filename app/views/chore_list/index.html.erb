<div class="frame">
  <div class="card-wrapper">
    <div class="box">
      <%= render "overdue", locals: {incomplete: @incomplete} %>
    </div>
    <div class="box"><%= render "to_do", locals: {to_do: @to_do} %></div>
    <div class="box">
      <%= render "completed", locals: {completed: @completed} %>
    </div>
    <div class="box">
      <%= render "upcoming", locals: {upcoming: @upcoming} %>
    </div>
    <div class="cl-tab-bar"><%= render "cl_tabs" %></div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Mark this task as complete?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary cancel-neutral" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success green-mark" id="mark-complete">Save changes</button>
      </div>
    </div>
  </div>
</div>
