<div class="frame">
  <div class="card-wrapper">
    <div class="box">
      <%= render "overdue", locals: {incomplete: @incomplete} %>
    </div>
    <div class="box"><%= render "to_do", locals: {to_do: @to_do} %></div>
    <div class="box">
      <%= render "completed", locals: {completed: @completed} %>
    </div>
    <div class="box">
      <%= render "upcoming", locals: {upcoming: @upcoming} %>
    </div>
    <div class="cl-tab-bar"><%= render "cl_tabs" %></div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" style="justify-content: center">
    <div class="modal-content-cl" style="border: 1px solid #fb723b;">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Mark complete?</h5>
      </div>
      <div class="modal-footer-cl d-flex" style="justify-content: space-between">
        <button type="button" class="btn btn-secondary cancel-neutral" data-bs-dismiss="modal">No</button>
        <div width="70px;">
          <button type="button" class="btn btn-success green-mark" id="mark-complete">Yes</button>
        </div>
      </div>
    </div>
  </div>
</div>
