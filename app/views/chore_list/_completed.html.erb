<%# <%= render "template" %>
<div class="cards-frame tabcontent" id="completed">
  <div class="chore-list-header">
    <h1 class="chore-list-title">Completed chores</h1>
  </div>
  <!-- Slider main container -->
  <div class="swiper3" data-controller="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <% if @completed.blank? %>
      <div class="swiper-slide completed-img" style="background-image: url('https://images.unsplash.com/photo-1586473219010-2ffc57b0d282?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1964&q=80');background-size: cover;">No chores has been completed..</div>
      <% else %> <% @completed.keys.each do |task| %>
      <div class="swiper-slide">
        <div class="card">
          <div class="d-flex">
            <div class="vl" style="background-color: #62C370"></div>

            <div class="card-body">
              <div class="card-title">
                <h4 style="font-size: 24px;margin: 0.5em 0;"><%= task.capitalize %></h4>
              </div>
              <div class="card-duration">
                <p>
                  <i class="fa-solid fa-clock-rotate-left"></i> Takes <%=
                  @completed[task].first.duration %>mins <br />
                </p>
                <p><i class="fa-regular fa-clipboard-check"></i> <%= @completed[task].count %>X completed</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %> <% end %>
    </div>
    <!-- If we need pagination -->
    <div class=".pagination-swiper3"></div>
  </div>
</div>
