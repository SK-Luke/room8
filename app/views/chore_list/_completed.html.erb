<%# <%= render "template" %>
<div class="cards-frame tabcontent" id = "completed">
  <h1>Completed chores</h1>
<!-- Slider main container -->
<div class="swiper3" data-controller='swiper'>
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    <% if @completed.blank? %>
      <div class="swiper-slide"> No chores to display</div>
    <% else %>
    <% @completed.each do |task| %>
      <div class="swiper-slide">
        <div class="card">

        <div class="d-flex">
          <div class="vl"></div>

          <div class="card-body">
          <div class="card-title">
            <h4><%= task.chore.name %></h4>
          </div>
          <div class="card-duration">
            <p><i class="fa-solid fa-clock-rotate-left"></i> Takes <%= task.chore.duration %>mins <br>
            </p>
            <p>Completed on <br><%= task.updated_at.strftime("%A, %d %b %Y") %></p>
          </div>
          </div>

        </div>

        </div>
      </div>
    <% end %>
    <% end %>

  </div>
  <!-- If we need pagination -->
  <div class=".pagination-swiper3"></div>

</div>
</div>
