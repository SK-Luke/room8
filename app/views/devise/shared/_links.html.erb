<%- if controller_name != 'sessions' %>
  <hr>
  <p style="margin-bottom:0;font-size:14px;">Already have an account?</p>
  <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary mt-2", style: "color: white;" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <hr>
  <p style="margin-bottom:0;font-size:14px;">Don't have an account yet?</p>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary mt-2", style: "color: white;" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), style: "text-decoration: underline; font-size:10px;float:right;color:grey;" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-primary mt-2" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-primary mt-2" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: "btn btn-primary mt-2" %><br />
  <% end %>
<% end %>
