<!-- Modal portion -->
<div id="addChoreModal" class="modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Chore</h5>
        <button type="button" data-action="click->setup-chores#modalClose" class="btn-close" aria-label="Close"></button>
      </div>
      <%= simple_form_for(@chore,
                          data: {
                          setup_chores_target: "form",
                          action: "submit->setup-chores#send"
                          }) do |f| %>
        <div class="modal-body">
          <%= f.input :name %>
          <%= f.input :repetition, label: "Happens", collection: (1..30).to_a %>
          <%= f.input :frequency, collection: %w(daily weekly monthly), label: false, class: "mx-3" %>
          <%= f.input :duration, :label => "Minutes taken to perform chore" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-action="click->setup-chores#modalClose">Close</button>
          <%= f.button :submit, "Submit", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End of Modal -->
